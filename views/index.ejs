<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>D Cube</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    .google-btn {
      background-color: #4285f4;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.3s;
      padding: 0.75rem 1rem;
    }

    .google-btn img {
      margin-right: 10px;
      width: 20px;
      height: auto; /* Maintain the aspect ratio */
    }

    .google-btn:hover {
      background-color: #357ae8;
    }

    .form-input {
      background-color: #edf2f7;
      color: #2d3748;
      transition: background-color 0.3s;
    }

    .form-input:focus {
      background-color: #e2e8f0;
    }

    .login-btn:hover {
      background-color: #e53e3e;
      transition: background-color 0.3s, transform 0.2s;
      transform: scale(1.02);
    }

    .left-text {
      font-family: 'Poppins', sans-serif;
      font-size: 1.8rem;
      color: #ffffff;
      line-height: 1.5;
    }

    @media (max-width: 1024px) {
      .left-text {
        font-size: 1.4rem;
      }
    }

    @media (max-width: 768px) {
      .left-text {
        font-size: 1.2rem;
        text-align: center;
      }
    }
  </style>
</head>

<body class="bg-gray-900">
  <div class="min-h-screen flex flex-col lg:flex-row items-center justify-center p-5 space-y-10 lg:space-y-0 lg:space-x-16 lg:pl-20">

    <!-- Left side text -->
    <div class="left-text lg:w-1/2 lg:text-left text-center mb-10 lg:mb-0 px-4">
      <h1 class="text-red-500 text-5xl lg:text-5xl mb-4 font-bold">Welcome to D Cube</h1>
      <p class="text-white leading-relaxed">
        Simplify your life with our seamless wardrobe management system. Organize, manage, and upload your outfits effortlessly.
      </p>
      <p class="text-white mt-4">
        <em>Login to get started and experience the features of wardrobe management!</em>
      </p>
    </div>

    <!-- Main login container -->
    <div class="bg-gray-800 p-10 rounded-lg shadow-md w-full max-w-md">
      <!-- Flash Messages -->
      <% if (messages.error && messages.error.length > 0) { %>
      <div class="mb-4 p-3 bg-red-600 text-white rounded-md text-center">
        <%= messages.error %>
      </div>
      <% } %>

      <% if (messages.success && messages.success.length > 0) { %>
      <div class="mb-4 p-3 bg-green-600 text-white rounded-md text-center">
        <%= messages.success %>
      </div>
      <% } %>

      <!-- Google sign-in button -->
      <div class="mb-6 text-center ">
        <a href="/users/auth/google" class="google-btn flex items-center justify-center w-full py-3 px-2 text-white rounded-lg">
          <img src="data:image/png;base64," alt="Google Logo" class="w-5 h-5 rounded-full">

          <span class="text-sm">Continue with Google</span>
        </a>
      </div>

      <!-- Divider -->
      <div class="flex items-center justify-between my-6 text-gray-500">
        <span class="w-full border-b border-gray-600"></span>
        <span class="px-2">Or, sign in with your email</span>
        <span class="w-full border-b border-gray-600"></span>
      </div>

      <!-- Login Form -->
      <form action="/users/login" method="POST">
        <div class="mb-5">
          <label class="block text-gray-400 text-sm mb-1" for="email">Email</label>
          <input type="email" id="email" name="email" autocomplete="email"
            class="form-input w-full px-3 py-2 rounded-lg focus:outline-none" placeholder="john@gmail.com" required />
        </div>

        <div class="mb-6">
          <label class="block text-gray-400 text-sm mb-1" for="password">Password</label>
          <div class="relative">
            <input type="password" id="password" name="password"
              class="form-input w-full px-3 py-2 rounded-lg focus:outline-none" placeholder="******" required />
            <span class="absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer" onclick="togglePassword('password')">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </span>
          </div>
          <div class="text-right mt-2">
            <a href="/users/forgot-password" class="text-sm text-red-500 hover:text-red-600">Forgot Password?</a>
          </div>
        </div>

        <button type="submit" class="login-btn w-full py-2 px-4 bg-red-500 text-white rounded-lg hover:bg-red-600 transition">
          Login
        </button>
      </form>

      <!-- Signup link -->
      <p class="text-center text-gray-400 mt-6">
        Don't have an account? <a href="/users/register" class="text-red-500 hover:text-red-600">Sign up</a>
      </p>
    </div>
  </div>

  <script>
    function togglePassword(inputId) {
      const input = document.getElementById(inputId);
      const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
      input.setAttribute('type', type);
      
      // Toggle the eye icon
      const icon = input.nextElementSibling.querySelector('svg');
      if (type === 'password') {
        icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />`;
      } else {
        icon.innerHTML = `<path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />`;
      }
    }
  </script>
</body>

</html>
