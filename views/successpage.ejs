<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Cloth</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1F2937;
        }

        .message-container {
            background-color: #2D3748;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
            text-align: center;
            color: white;
            font-size: 1.5rem;
        }

        /* Added styles for the mobile menu */
        #mobile-menu {
            position: absolute; /* Position the menu absolutely */
            top: 60px; /* Adjust this based on your navbar height */
            right: 0;
            left: 0; /* Make it full-width */
            z-index: 10; /* Ensure it appears above other content */
        }
    </style>
</head>

<body class="bg-gray-900 min-h-screen flex flex-col">
    <nav class="bg-gray-800 text-white p-4 flex justify-between items-center">
        <div class="flex items-center">
            <span class="text-xl font-bold text-purple-400 mr-2">D Cube</span>
            <img src="/images/logo.jpg" alt="D Cube Logo" class="w-10 h-10">
        </div>

        <!-- Desktop Menu -->
        <div class="hidden lg:flex items-center space-x-6 ml-auto">
            <a href="/intro" class="text-white hover:text-red-500">Home</a>
            <a href="/intro" class="text-white hover:text-red-500">About</a>
            <a href="/intro" class="text-white hover:text-red-500">Contact us</a>
            <a href="/users/logout" class="text-red-400 hover:text-red-500">Logout</a>
        </div>

        <!-- Mobile Hamburger Menu Button -->
        <div class="lg:hidden">
            <button id="menuButton" class="focus:outline-none">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>
        </div>
    </nav>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden lg:hidden bg-gray-800 text-white p-4">
        <a href="/intro" class="block py-2 px-4 text-white hover:text-red-500">Home</a>
        <a href="/intro" class="block py-2 px-4 text-white hover:text-red-500">About</a>
        <a href="/intro" class="block py-2 px-4 text-white hover:text-red-500">Contact us</a>
        <a href="/users/logout" class="block py-2 px-4 text-red-400 hover:text-red-500">Logout</a>
    </div>

    <!-- Back Button and Message Section -->
    <div class="max-w-6xl w-full mx-auto mt-4 p-4 flex flex-col lg:flex-row items-center lg:items-start lg:space-x-4">
        <a href="/clothes/add-clothes" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 focus:outline-none lg:self-start mt-2 mb-4">
            Back
        </a>
        <h1 class="text-2xl bg-gray-800 text-white p-4 lg:p-8 rounded-lg shadow-lg flex-1 text-center lg:text-left">
            Your Cloth has been successfully added to your wardrobe
        </h1>
    </div>

    <script>
        // Toggle mobile menu visibility
        document.getElementById('menuButton').onclick = function () {
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenu.classList.toggle('hidden');
        };
    </script>
</body>

</html>
