<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESP32 Test Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        body { background-color: #FAD0C9FF; }
        .data-card { background-color: #101820FF; }
    </style>
</head>
<body class="min-h-screen p-4">
    <div class="max-w-4xl mx-auto space-y-4">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">ESP32 Test Page</h1>
        
        <div id="status" class="text-white text-sm font-semibold px-4 py-2 rounded-full inline-block bg-yellow-500">
            Connecting...
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="data-card rounded-lg p-6 shadow-lg">
                <h2 class="text-xl font-semibold text-white mb-2">Test Data</h2>
                <div id="testData" class="text-gray-300">Waiting...</div>
            </div>

            <div class="data-card rounded-lg p-6 shadow-lg">
                <h2 class="text-xl font-semibold text-white mb-2">Counter</h2>
                <div id="counter" class="text-gray-300">--</div>
            </div>

            <div class="data-card rounded-lg p-6 shadow-lg">
                <h2 class="text-xl font-semibold text-white mb-2">WiFi Strength</h2>
                <div id="wifiStrength" class="text-gray-300">--</div>
            </div>

            <div class="data-card rounded-lg p-6 shadow-lg">
                <h2 class="text-xl font-semibold text-white mb-2">Last Update</h2>
                <div id="lastUpdate" class="text-gray-300">Never</div>
            </div>
        </div>

        <div class="data-card rounded-lg p-6 shadow-lg mt-8">
            <h2 class="text-xl font-semibold text-white mb-2">Debug Log</h2>
            <pre id="log" class="text-sm text-gray-300 h-48 overflow-y-auto"></pre>
        </div>
    </div>

    <script>
        // Update data every 1 second
        setInterval(async () => {
            try {
                const response = await fetch('/esp32data');
                const data = await response.json();
                
                document.getElementById('testData').textContent = data.test;
                document.getElementById('counter').textContent = data.counter;
                document.getElementById('wifiStrength').textContent = data.wifi_strength + ' dBm';
                document.getElementById('lastUpdate').textContent = data.lastUpdate;
            } catch (error) {
                console.error('Error fetching data:', error);
            }
        }, 1000);
    </script>
</body>
</html> 